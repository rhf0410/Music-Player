<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/latest_song_list_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/latest_song_list_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher"/>
        
        <TextView
            android:id="@+id/latest_song_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dsa"
            android:layout_alignTop="@id/latest_song_list_picture"
            android:layout_toRightOf="@id/latest_song_list_picture"/>
        
        <TextView
            android:id="@+id/latest_song_list_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dsa"
            android:layout_alignBottom="@id/latest_song_list_picture"
            android:layout_toEndOf="@id/latest_song_list_picture"
            android:layout_marginTop="6dp"/>
        
    </RelativeLayout>

</RelativeLayout>